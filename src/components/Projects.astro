---
import data from "./Projects.json";
import { Img } from "astro-imagetools/components";
import Tailwindcss from "./svgl-icons/Tailwindcss.astro";
import { Briefcase } from "lucide-astro";
---

<section class="my-40 flex gap-4 flex-col">
  <div class="flex gap-2 items-center mb-8">
    <Briefcase class="text-zinc-300" />
    <h2 class="text-3xl font-thin text-zinc-300">Proyectos</h2>
  </div>

  {
    data.map((item) => (
      <div class="flex flex-col gap-3">
        <h3 class="text-2xl text-sky-300 font-bold">{item.project_title}</h3>
        <div class="flex gap-2 text-zinc-400 border-blue-200">
          <a class="underline p-1" target="_blank" href={item.project_url_demo}>
            demo
          </a>
          <a
            class="underline p-1"
            target="_blank"
            href={item.project_url_github}
          >
            github
          </a>
        </div>
        <p class="text-lg text-zinc-200">{item.project_description}</p>
        <div class="flex gap-2">
          {item.project_stack.map((stack) => (
            <span class="text-zinc-400 border-zinc-800 text-xs border  rounded-lg px-2 py-1 flex gap-2">
              {stack}
            </span>
          ))}
        </div>
        <div class="w-full rounded-xl aspect-video overflow-hidden">
          <Img src={item.project_img} alt={item.project_title} />
        </div>
      </div>
    ))
  }
</section>
